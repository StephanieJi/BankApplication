<h1>Deposit</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
   <% if @accounts.empty? %>
   		<h4 style="text-align: center">No accounts to deposit!</h4>
   <% else %>
	  <%= form_tag("", method:"post") do %>
    <%= label_tag "Source account number"%>
      <%= select_tag "account_id", options_from_collection_for_select(@accounts, "id", "account_id") %>
	  <%= label_tag "Amount"%>
    <%= text_field_tag 'amount'%>
	  <%= submit_tag "Deposit" ,:name => nil%>

   	  <% end %>
   <% end %>
   
  </div>