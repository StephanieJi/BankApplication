<div class="center jumbotron">
<h2>Transactions history</h2>
<br>
Account details of <%= @account.user.name %>:<br>
<%= "Account number: #{@account.account_id}" %><br>
<%= "Account balance: #{@account.balance}" %>
  <h4>
	<% @account.transactions.each do |transaction| %>
		<div>
			<%= "Transaction ID: #{transaction.id}" %><br>
			<%= "Transaction status: #{status_name transaction.status}" %><br>
			<%= "Start time: #{transaction.start}" %><br>
			<%= "Finish time: #{transaction.finish}" %><br>
			<%= "#{transaction_name transaction.transaction_type}" %><br>
			<%= "Amount: #{transaction.amount}" %><br>
			<%= "From account ID: #{transaction.account.account_id}" %><br>
			<% if transaction.transaction_type == 3 %><br>
				<% transfer = Transfer.find_by(:transaction_id => transaction.id) %>
				<% dest_account = Account.find_by(:id => transfer.account_id) %>
				<%= "transfer to destination account number: #{dest_account.account_id}" %>
			<% end %>
			<% if transaction.status == pending_status && (transaction.transaction_type == deposit_type || transaction.transaction_type == withdraw_type) %>
				<%= link_to "Approve transaction", approve_or_decline_transaction_path(:transaction_id => transaction.id, :decision => '1', :url => 'history1', :account => @account) %>
			<%= link_to "Decline transaction", approve_or_decline_transaction_path(:transaction_id => transaction.id, :decision => '2', :url => 'history1', :account => @account) %>
			<% end %>
		</div>
  <%= link_to "Go to account details", view_account_details_path(@account) %>
		<br><br>
<% end %>
  </h4>
<br>
  <%= link_to "Back", view_account_details_path(@account) %>

</div>


