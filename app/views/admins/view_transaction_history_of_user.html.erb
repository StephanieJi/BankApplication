<div class="center jumbotron">
<h2>Transactions history</h2>
<br>
<%= @account.user.name %>:<br>
<%= "Account number: #{@account.account_id}" %><br>
  <h4>
	<% @account.transactions.each do |transaction| %>
		<div>
			<%= "Transaction ID: #{transaction.id}" %><br>
			<%= "Transaction status: #{status_name transaction.status}" %><br>
			<%= "Start time: #{transaction.start}" %><br>
			<%= "Finish time: #{transaction.finish}" %><br>
			<%= "#{transaction.transaction_type}" %><br>
			<%= "Amount: #{transaction.amount}" %><br>
			<%= "From account ID: #{transaction.account_id}" %><br>
			<% if transaction.type == 3 %><br>
				<%= "transfer to account ID: #{transaction.transfer.account_id}" %>
			<% end %>
			<% if transaction.status == 3 && transaction.type == 1 %>
				<%= link_to "approve transaction", approve_or_decline_transaction_path(:transaction_id => t.id, :decision => '1', :url => 'history') %>
				<%= link_to "decline transaction", approve_or_decline_transaction_path(:transaction_id => t.id, :decision => '2', :url => 'history') %>
			<% end %>
		</div>
		<br><br>
	<% end %>
  </h4>
<br>
  <%= link_to "Back to account details", view_account_details_path(account) %>
</div>


